<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="TextHeadingPrimary">
        <item name="android:fontFamily">@font/poppins_medium</item>
        <item name="android:textColor">@color/color_primary_text</item>
        <item name="android:textSize">@dimen/text_heading_primary</item>
    </style>

    <style name="TextBodyPrimary">
        <item name="android:textColor">@color/color_secondary_text</item>
        <item name="android:textSize">@dimen/text_body_primary</item>
    </style>

    <style name="TextButtonPrimary">
        <item name="android:fontFamily">@font/poppins_medium</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">@dimen/text_button_primary</item>
    </style>

    <style name="TextCaptionPrimary">
        <item name="android:textColor">@color/color_secondary_text</item>
        <item name="android:textSize">@dimen/text_caption_primary</item>
    </style>

</resources>