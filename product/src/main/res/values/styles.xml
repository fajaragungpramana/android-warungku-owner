<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="TabLayout" parent="Widget.Design.TabLayout">
        <item name="tabIndicatorColor">@color/color_on_primary</item>
        <item name="tabBackground">@null</item>
        <item name="tabSelectedTextColor">@color/color_on_primary</item>
        <item name="tabTextAppearance">@style/TabTextAppearance</item>
        <item name="tabPaddingStart">@dimen/padding_secondary</item>
        <item name="tabPaddingEnd">@dimen/padding_secondary</item>
        <item name="tabMode">scrollable</item>
    </style>

    <style name="TabTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="android:fontFamily">@font/poppins_medium</item>
        <item name="android:textColor">@color/color_primary_divide</item>
        <item name="android:textSize">@dimen/text_button_primary</item>
        <item name="textAllCaps">false</item>
    </style>

</resources>